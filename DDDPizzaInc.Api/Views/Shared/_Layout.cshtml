<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IEdge" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Trade+Winds' rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/Content/vendor.css")" rel='stylesheet' type='text/css' />
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="work-spinner">
        <img src="@Url.Content("~/Content/img/loading-text.gif")" alt="Loading" data-target=".navbar-collapse" />
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="site-title">DDD</span><span class="site-title-2">PizZa</span>
                <img width="85" src="@Url.Content("~/Content/img/PizzaLogo.png")" alt="DDD Pizza" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DDD Pizza Inc</p>
        </footer>
    </div>

    <script src=@Url.Content("~/Scripts/libs/vendor.js") ></script>
    @RenderSection("scripts", required: false)
</body>
</html>
